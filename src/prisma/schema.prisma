// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  // Base
  uuid      String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt()
  isDeleted Boolean   @default(false)
  createdBy String?
  deletedBy String?
  deletedAt DateTime?

  firstName String?
  lastName  String?
  email     String     @unique
  password  String?
  Documents Document[]

  @@map("users")
}

model Document {
  // Base
  uuid      String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt()
  isDeleted Boolean   @default(false)
  createdBy String?
  deletedBy String?
  deletedAt DateTime?

  name      String?
  data      String?
  signedPdf Bytes?
  user      User?   @relation(fields: [userUuid], references: [uuid])
  userUuid  String?

  @@map("documents")
}
